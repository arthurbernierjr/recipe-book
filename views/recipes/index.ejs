<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Recipe Book</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1>Recipe Book</h1>
    </header>

    <div class="container">
        <% if (userId) { %>
            <a href="/recipes/new" class="button">Add New Recipe</a>
        <% } else { %>
            <p><a href="/login" class="button">Login to add recipes</a></p>
        <% } %>

        <% if (recipes.length === 0) { %>
            <p>No recipes found!</p>
        <% } else { %>
            <% recipes.forEach(recipe => { %>
                <div class="recipe-card">
                    <h2><%= recipe.name %></h2>
                    <p><strong>Cuisine:</strong> <%= recipe.cuisine %></p>
                    <p><strong>Type:</strong> <%= recipe.type %></p>
                    <p><strong>Difficulty:</strong> <%= recipe.difficulty %></p>

                    <a href="/recipes/<%= recipe._id %>" class="button">View</a>

                    <% if (userId) { %>
                        <a href="/recipes/<%= recipe._id %>/edit" class="button">Edit</a>
                    <% } %>
                </div>
            <% }) %>
        <% } %>
    </div>
</body>
</html>
